<div class="divider_box">

  <h3> &nbsp; Users Online: <%= @users.size %></h3>

  <% for user in @users %>

    <div class="user_box">
      <div class="user_name">
        <%= link_to(user.name, admin_user_path(user)) %>
      </div>
      <div class="user_avatar_small">
        <%= link_to(image_tag(user.avatar.url(:thumb)), admin_user_path(user)) %>
      </div>
      <div class="user_ip">
        IP: <%= user.remote_ip %>
      </div>
      <div class="user_url">
        <%= #link_to user.last_url_visited, user.last_url_visited 
        %>
      </div>
      <div class="user_last_seen">
        <%= distance_of_time_in_words_to_now(user.last_seen) %> ago
      </div>
    </div>
    
  <% end %>
  
</div>