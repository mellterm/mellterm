<!-- Search content -->
<div id="search" >
  <% form_for @terms_search, :url => {:controller => "translations"}, :html => {:name => "search"} do |f| %>
  <table>
    <tr>
      <td><%= f.text_field :source_content_or_target_content_like_any, :class => "search-text" %></td>
      <td><%= f.submit "Search" %></td>
    </tr>
  </table>
    <p>Document: <%= f.select :document_id_equals, current_user.documents.collect {|t| [t.data_file_name,t.id]}, :include_blank => true %></p>
    <br />
    <p>From: <%= f.select :source_language_id_equals, Language.all.collect {|t| [t.title,t.id]}, :include_blank => true %></p>
    <p>To: <%= f.select :target_language_id_equals, Language.all.collect {|t| [t.title,t.id]}, :include_blank => true %></p>
    <p> <%= f.check_box :approved_equals %> Approved Only</p>
    <br />
    <% Category.all.each do |t|%>
      <div class="checkbox_search_item">
        <%= check_box_tag "categories[]", 
            t.id, params[:categories] && params[:categories].include?(t.id.to_s),
            :id => "checkbox_#{t.id}"
        %>
        <%= link_to t.title, "#", :title => t.description.to_s, 
            :onclick => "toggleCheckbox('checkbox_#{t.id}');" 
        %>
      </div>
    <% end %>
  <% end %>
</div>