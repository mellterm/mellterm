<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :language_id %><br />
    <%= f.select(:language_id, Language.all.collect {|p| p.title }, { :include_blank => false }) %>
  </p>
  <p><%= f.submit %></p>
<% end %>
