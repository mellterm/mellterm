<table class="userprofile-div">
  <tr>
    <td><%= form.label :login %></td>
    <td><%= form.text_field :login, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :password, form.object.new_record? ? nil : "Change password" %></td>
    <td><%= form.password_field :password, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :password_confirmation %></td>
    <td><%= form.password_field :password_confirmation, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :email %></td>
    <td><%= form.text_field :email, :type => "email", :class=>"nice_input" %></td>
  </tr>
</table>
