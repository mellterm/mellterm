<table class="userprofile-div">
  <tr>
    <td><%= form.label :name_title, "Title" %></td>
    <td><%= form.select :name_title, options_for_select(["mr.", "mrs.", "miss."],current_user.name_title), {:include_blank => true} %></td>
  </tr>
  <tr>
    <td><%= form.label :name %></td>
    <td><%= form.text_field :name, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :phone %></td>
    <td><%= form.text_field :phone, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :address %></td>
    <td><%= form.text_field :address, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :skype %></td>
    <td><%= form.text_field :skype, :class=>"nice_input" %></td>
  </tr>
  <tr>
    <td><%= form.label :country_name, "Country" %></td>
    <td><%= form.country_select :country_name, "Select Country" %></td>
  </tr>
  <tr>
    <td><%= form.label :user_type_id, "Type of User" %></td>
    <td><%= form.select :user_type_id, UserType.all.map{|t| [t.name,t.id]}, {:include_blank => true} %></td>
  </tr>
  <tr>
    <td><%= form.label :language, "Native Language" %></td>
    <td><%= form.select :language_id, Language.all.map {|t| [t.name,t.id]} %></td>
  </tr>
  <tr>
    <td><%= form.label :notes, "Personal BIO" %></td>
    <td><%= form.text_area :notes, :rows => 8, :cols => 24, :class=>"nice_input" %></td>
  </tr>
  <% if current_user.avatar %>
    <tr>
      <td><%= form.label :avatar, "Change Photo" %></td>
      <td><%= form.file_field :avatar %></td>
    </tr>
    <tr>
      <td>Current Photo</td>
      <td><%= image_tag(current_user.avatar.url(:mini), :alt => 'Photo', :title => 'Current photo') %></td>
    </tr>
  <% else %>
    <tr>
      <td><%= form.label :avatar, "Add Profile Photo" %></td>
      <td><%= form.file_field :avatar %></td>
    </tr>
  <% end %>
</table>

<br />
<hr>
