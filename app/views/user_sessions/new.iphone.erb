<% form_for @user_session, :url => user_session_path do |f| %>
  
  <fieldset>
    
    <legend><%= @title %></legend>

    <%= f.label :login %>
    <%= f.text_field :login, :size => 21 %>
  
    <%= f.label :password %>
    <%= f.password_field :password, :size => 21 %>

    <br />
    
    <label><%= f.check_box :remember_me %> Remember me</label>

    <div class="submit">
      <%= f.submit "Login" %>
    </div>

  </fieldset>
  <%= f.error_messages %>
  
<% end %>