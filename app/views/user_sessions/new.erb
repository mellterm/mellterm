<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td><%= f.label :login %></td>
      <td><%= f.text_field :login, :size => 24 %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password, :size => 24 %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.check_box :remember_me%> Remember me</td>
    </tr>
  </table>
      
  <%= f.submit "Login" %>
<% end %>