<h3> <%= @title ||= "Editing #{@category.title}" %> </h3>

<% form_for(@category, :url => admin_categories_path) do |f| %>

  <%= f.error_messages %>
  
  <%= render :partial => 'form', :locals => { :f => f, :category => @category } %>

  <%= image_submit_tag "admin/save_button.png", :class => "button" %>
  
<% end %>

