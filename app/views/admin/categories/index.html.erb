<% title "Domains" %>

<table id="hor-minimalist-b">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
  <% for category in @categories %>
    <tr>
      <td><%= link_to category.title, admin_category_path(category) %></td>
      <td><%= category.description %></td>
      <td><%= link_to "Edit", edit_admin_category_path(category) %></td>
      <td><%= link_to "Del", admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Domain", new_admin_category_path %></p>
