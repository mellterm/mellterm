<% title "Translations" %>

<% form_for @search do |f| %>
  <%= f.text_field :source_content_or_target_content_like_any %>
  <%= f.submit "Search" %>
  <br />
  <% Category.all.each do |t|%>
    <%= check_box_tag "categories[]", t.id %>
    <%= t.title %>
  <% end %>
<% end %>

<table id="hor-minimalist-b">
  <tr>
    <th>From</th>
    <th>To</th>
    <th></th>
    <th></th>
    <th>Domain</th>
    <th>Company</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for translation in @translations %>
    <tr>
      <td><%=h translation.source_content %></td>
      <td><%=h translation.target_content %></td>
      <td><%=h translation.source_language.title %></td>
      <td><%=h translation.target_language.title %></td>
      <td><%=h translation.category_name %></td>
      <td><%=h translation.company_name %></td>
      <td><%=h translation.notes %></td>
      <td><%= link_to "Show", admin_translation_path(translation) %></td>
      <td><%= link_to "Edit", edit_admin_translation_path(translation) %></td>
      <td><%= link_to "Destroy", admin_translation_path(translation), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<p>
  <%= link_to image_tag("admin/new_button.png"), new_admin_translation_path %>
</p>
<br />
<div class="digg_pagination">
  <div clas="page_info">
    <%= page_entries_info @translations %>
  </div>
  <br />
  <%= will_paginate @translations, :container => false %>
</div>

