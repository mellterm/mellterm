<h3> <%= @title ||= "Editing #{@language.title}" %> </h3>

<% form_for @language, :url => { :action => "update" } do |f| %>

  <%= f.error_messages %>
  
  <%= render :partial => 'form', :locals => { :f => f, :language => @language } %>

  <%= image_submit_tag "admin/save_button.png", :class => "button" %>
  
<% end %>
