<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title><%= h(yield(:title) || "Untitled") %></title>
  <%= stylesheet_link_tag 'themes/indicator/style.css' %>
  <%= javascript_include_tag :defaults %>
  <%= yield(:head) %>
</head>
  
<body>
  <div id="wrapper">
  	<div id="header-wrapper">
  	<div id="header">
  		<div id="logo">
  			<h1><a href="/">Translations</a></h1>
  			<p>Subtitle here</p>
  		</div>
  	</div>
  	</div>
  	<!-- end #header -->
  	<div id="page">
  	<div id="page-bgtop">
  	<div id="page-bgbtm">
  	  
  		<div id="content">
  		  
  		  <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :class => "flash_#{name}" %>
        <%- end -%>
        
        <div class="post">
          <%- if show_title? -%>
            <h2 class="title">
              <%=h yield(:title) %>
            </h2>
          <%- end -%>
          <div class="entry">
            <%= yield %>
          </div>
        </div>

  		<div style="clear: both;">&nbsp;</div>
  		</div>
  		<!-- end #content -->
  		<div id="sidebar">
  			<ul>
  				<li>
  			    <% if logged_in? %>
    					<div id="search" >
    					  <% form_for @search, :url => {:controller => "translations"}, :html => {:name => "search"} do |f| %>
                  <%= f.text_field :source_content_or_target_content_like_any, :class => "search-text" %>
                  <%= f.submit "Search" %>
                  <br />
                  <% Category.all.each do |t|%>
                    <div class="checkbox_search_item">
                      <%= check_box_tag "categories[]", t.id, params[:categories]&&params[:categories].include?(t.id.to_s) %> <%= t.title %>
                    </div>
                  <% end %>
                <% end %>
    					</div>
  					<% end %>
  					<div style="clear: both;">&nbsp;</div>
  				</li>
  				
  				<li>
  					<h2>Menu</h2>
            <ul>
              <% if logged_in? %>
                <li> <%= link_to "Translations", translations_path %> </li>
                <li> <%= link_to "Account", edit_account_path %> </li>
                <li> <%= link_to "Logout", logout_path %> </li>
              <% else %>
                <li> <%= link_to "Login", login_path %> </li>
              <% end %>
            </ul>
  				</li>
  				<li>
  					<h2>Links</h2>
  					<ul>
  					  <% Page.all.each do |page| %>
  					    <li><%= link_to page.title, permalink_path(page.permalink) %></li>
  					  <% end %>
  					</ul>
  				</li>
  			</ul>
  		</div>
  		<!-- end #sidebar -->
  		<div style="clear: both;">&nbsp;</div>
  	</div>
  	</div>
  	</div>
  	<!-- end #page -->
  </div>
	<div id="footer">
		<p>Copyright (c) 2010 Sitename.com. All rights reserved.</p>
	</div>
	<!-- end #footer -->
</body>
</html>
