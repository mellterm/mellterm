<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="navigation">
      <ul>
        <li> <%= link_to "Translations", translations_path %> </li>
        <li> <%= link_to "Categories", categories_path %> </li>
        <li> <%= link_to "Companies", companies_path %> </li>
        <li> <%= link_to "Languages", languages_path %> </li>
        <li> <%= link_to "Pages", pages_path %> </li>
      </ul>
    </div>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
  
  <% if params[:search] %>
  <script language=JavaScript>
    highlightSearchTerms("<%= params[:search][:source_content_or_target_content_like_any] %>", false);
  </script>
  <% end %>
  
</html>
